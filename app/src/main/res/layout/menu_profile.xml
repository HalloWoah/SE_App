<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
    android:id="@+id/location"
    android:layout_marginLeft="25dp"
    android:layout_marginStart="25dp"

    android:layout_marginTop="70sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Location:"
    android:textSize="25sp"

    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <Spinner
        android:id="@+id/locationList"

        android:layout_marginLeft="130dp"
        android:layout_marginStart="130dp"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="72dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/dietaryPreferences"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="120sp"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:text="Dietary Preferences:"
        android:textSize="25sp"

        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <ToggleButton
        android:id="@+id/glutenButton"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="110dp"
        android:layout_width="50sp"
        android:layout_height="40sp"
        android:text="ToggleButton" />
    <TextView
        android:id="@+id/glutenFree"
        android:layout_marginLeft="78dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="110dp"
        android:layout_width="150sp"
        android:layout_height="30dp"
        android:text="Gluten-free"
        android:textSize="17sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    <ToggleButton
        android:id="@+id/healthierChoiceButton"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="390dp"
        android:layout_width="50sp"
        android:layout_height="40sp"
        android:text="ToggleButton" />
    <TextView
        android:id="@+id/healthierChoice"
        android:layout_marginLeft="78dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="400sp"
        android:layout_width="150sp"
        android:layout_height="30dp"
        android:text="Healthier Choice"
        android:textSize="17sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    <ToggleButton
        android:id="@+id/halalButton"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="430dp"
        android:layout_width="50sp"
        android:layout_height="40sp"
        android:text="ToggleButton" />
    <TextView
        android:id="@+id/halal"
        android:layout_marginLeft="78dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="440sp"
        android:layout_width="150sp"
        android:layout_height="30dp"
        android:text="Halal"
        android:textSize="17sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    <ToggleButton
        android:id="@+id/vegetarianButton"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="470dp"
        android:layout_width="50sp"
        android:layout_height="40sp"
        android:text="ToggleButton" />
    <TextView
        android:id="@+id/vegetarian"
        android:layout_marginLeft="78dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="480sp"
        android:layout_width="150sp"
        android:layout_height="30dp"
        android:text="Vegetarian"
        android:textSize="17sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
</android.support.design.widget.CoordinatorLayout>