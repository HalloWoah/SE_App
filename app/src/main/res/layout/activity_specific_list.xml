<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myfirstapp.ui.SpecificListFragment">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

    </android.support.design.widget.AppBarLayout>


    <TableLayout
        android:id="@+id/specific_list_details"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="Item"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Brand"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="Quantity"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Total Price" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/back"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="250dp"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Back" />

    <Button
        android:id="@+id/addItem"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Add Other Items" />

    <Button
        android:id="@+id/confirmList"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="250dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Confirm List" />

    <include
        android:id="@+id/include3"
        layout="@layout/content_specific_list" />


</android.support.design.widget.CoordinatorLayout>
